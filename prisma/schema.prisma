model User {
    id          String     @id @unique
    created_at  DateTime   @default(now())
    first_name  String     
    last_name   String 
    enters      Enter[]
    quits       Quit[]
    sessions    Session[] 
}

model Enter {
    id          String     @id @unique
    created_at  DateTime   @default(now())  
    author      User?      @relation(fields: [authorId], references: [id])
    authorId    String     @unique
}

model Quit {
    id          String     @id @unique
    created_at  DateTime   @default(now())
    author      User?      @relation(fields: [authorId], references: [id])
    authorId    String     @unique
}

model Session {
    id          String     @id @unique
    created_at  DateTime   @default(now())
    duration    String 
    author      User?      @relation(fields: [authorId], references: [id])
    authorId    String     @unique
}

